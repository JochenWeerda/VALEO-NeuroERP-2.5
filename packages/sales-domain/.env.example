# Server Configuration
PORT=3001
HOST=0.0.0.0
NODE_ENV=production
LOG_LEVEL=info

# Database Configuration
POSTGRES_URL=postgres://user:password@localhost:5432/sales_db
DATABASE_URL=postgres://user:password@localhost:5432/sales_db

# Authentication & Security
JWKS_URL=https://auth.valero-neuroerp.com/.well-known/jwks.json
JWT_ISSUER=https://auth.valero-neuroerp.com
JWT_AUDIENCE=sales-domain

# Message Broker (NATS/Kafka)
NATS_URL=nats://localhost:4222
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=sales-domain

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=sales-domain
OTEL_SERVICE_VERSION=1.0.0

# API Configuration
API_BASE_URL=http://localhost:3001
API_VERSION=v1

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=3s
HEALTH_CHECK_START_PERIOD=5s
HEALTH_CHECK_RETRIES=3

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=60000

# Event Publishing
EVENT_PUBLISH_TIMEOUT=5000
EVENT_PUBLISH_RETRIES=3
EVENT_PUBLISH_RETRY_DELAY=1000

# Request Limits
REQUEST_TIMEOUT=30000
PAYLOAD_LIMIT=1048576