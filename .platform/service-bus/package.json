{
  "name": "@valero/service-bus",
  "version": "1.0.0",
  "description": "VALEO NeuroERP 3.0 - Core Message Bus Service",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "docker:build": "docker build -t valero/service-bus .",
